{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "target": "es2018"
    }
}
